[logging]
# loglevel = {debug, info}
loglevel = info
log_format = %(asctime)s %(levelname)-8s %(name)s.%(module)s.%(funcName)s() l.%(lineno)03d : %(message)s
logfile = /tmp/upq.log

[paths]
# paths beginning with "./" are treated as relative to path of this cfg file
socket    = /tmp/upq-incoming.sock
socket_chmod = 660
jobs_dir  = ./jobs

[db]
url= mysql://user:password@hostname/dbname

[job hash]
enabled = true
concurrent = 2
#this can be accessed through self.jobcfg['path'] inside a job
path = /var/www/springfiles/

[job new_file]
# needs filepath
enabled = true
# number of max. concurrent executions of this job, 0 means the main server will
# handle it syncroniously (connection blocking!)
concurrent = 3
notify_fail =
notify_success =

[job archive_file]
enabled = true
concurrent = 2

[job verify_local_file]
# needs fid
enabled = true
concurrent = 2
notify_fail = notify mail:user1@example.org,user2@example.org syslog

[job verify_remote_file]
# needs fmfid and fmid
enabled = true
concurrent = 2

[job upload]
enabled = true
concurrent = 2
path = /var/www/springfiles/
#path that is excluded for uploaded structure
prefix = sites/default/files/

[job test]
enabled = true
concurrent = 100
notify = notify syslog mail:user@server.com

[job remote_md5]
enabled = true
concurrent = 2

[job list_queue]
enabled = true
concurrent = 2
format = %(jobid)s %(jobname)s %(starttime)s %(status)s
sort = jobid

[job move_file_to_archive]
enabled = true
concurrent = 2

[job extract_metadata]
enabled = true
concurrent = 2
unitsync=/usr/lib/spring/libunitsync.so
outputpath=/var/www/springfiles/sites/default/files/springdata
datadir=/var/www/springfiles/sites/default/files/springdata

[job notify]
enabled = true
concurrent = 1
from = root@localhost
